{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-eslint-rules"
  ],
  "linterOptions": {
    "exclude": [
      "src/**/*.js",
      "node_modules/**/*.ts",
      "node_modules/**/*.js"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "max-line-length": {
      "options": [
        250
      ]
    },
    "no-console": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "ter-padded-blocks": [
      true,
      {
        "blocks": "always",
        "classes": "always",
        "switches": "never"
      }
    ]
  },
  "jsRules": {}
}
