{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "src/**/*.js",
      "node_modules/**/*.ts",
      "node_modules/**/*.js"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "max-line-length": {
      "options": [
        250
      ]
    },
    "no-console": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "semicolon": [
      false,
      "never"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false
  },
  "jsRules": {}
}
